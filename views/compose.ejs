<%- include("partials/header"); -%>
<h1>Compose</h1>
<form action="/compose" method="post" class="animated-form">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input class="form-control" type="text" name="postTitle" id="postTitle" required>
    <label for="postBody">Post</label>
    <textarea class="form-control" name="postBody" id="postBody" rows="5" cols="30" required></textarea>
  </div>
  <button class="btn btn-primary animated-button" type="submit">Publish</button>
</form>


<%- include("partials/footer"); -%>

